<div ng-controller="IndexCtrl" ng-style="{backgroundColor:myColor}">
  <div class="container">
    <div class="row">
      <div class="col-sm-2"></div>
      <div class="col-sm-8">

        <div class="content">
          <h2>Background Color</h2>
          <p>
            <input type="text" ng-model ="myColor" class="form-control" placeholder="Type a color" autofocus>
          </p>
        </div>

        <div class="content">
          <h2>
            <label for="check">Show movie list?</label>
          </h2>
          <p>
            <input type="checkbox" ng-model ="checked" id="check">
          </p>
        </div>

        <div ng-show ="checked" class="content">
          <h2>Movie List</h2>
          <h3>I have {{movies.length}} favorite
            <ng-pluralize count = "movies.length" when = "{'1' : 'movie', 'other' : 'movies'}"></ng-pluralize>
          </h3>
          <p>
            <input type="search" ng-model ="search" class="form-control" placeholder="Filter movies">
          </p>
          <div ng-repeat ="movie in movies | filter: search | orderBy: 'title' | limitTo: 3">
            <p>
              <strong>Title (Reversed)</strong>: {{movie.title | uppercase | reverseTitle}}
              <button ng-click ="removeFavorite(movie)" class="btn btn-danger">Remove</button>
            </p>
          </div>
        </div>

        <div class="content">
          <h2>Keypress Counter</h2>
          <p>
            <input ng-keypress="count = count + 1" ng-init="count=0" class="form-control" placeholder="Start typing">
          </p>
          <h3>Count: {{count}}</h3>
        </div>

        <div class="content">
          <h2>Hide Word</h2>
          <form ng-submit="submit()" ng-controller="IndexCtrl">
            <p>
              <input type="text" ng-model="text" class="form-control" placeholder="Type a word">
            </p>
            <p>
              <input type="submit" class="btn btn-primary" value="Submit">
            </p>
          </form>
        </div>

        <div class="content">
          <h2>Secret Word</h2>
          <div ng-hide ="removed">
            <p>You have 20 characters to guess the password...</p>
            <input type="text" ng-model ="typing" ng-keypress="count = count + 1" ng-init="count=0" class="form-control" placeholder="Type your guess">
            <h3>{{typing}}</h3>
            <h3>Count: {{count}}</h3>
          </div>
          <h3>{{notice}}</h3>
        </div>

        <div class="col-sm-2"></div>
      </div>
    </div>
  </div>
</div>